# Probe Agents Kit - Environment Configuration
# Copy to .env and modify as needed

# AI-HABITAT Core API URL (register, traces, physics, joint)
# Windows/Mac Docker: http://host.docker.internal:9670
# Linux Docker: http://172.17.0.1:9670 or use host network
# Local development: http://localhost:9670
HABITAT_CORE_URL=http://localhost:9670

# AI-HABITAT Perception API URL (perceive)
# Windows/Mac Docker: http://host.docker.internal:9671
# Linux Docker: http://172.17.0.1:9671 or use host network
# Local development: http://localhost:9671
HABITAT_PERCEPTION_URL=http://localhost:9671

# Agent Counts
# Recommended: QS=10, CBC=3, JAP=2 (total 15 agents)
PROBE_QS_COUNT=10
PROBE_CBC_COUNT=3
PROBE_JAP_COUNT=2

# Random Seed (for deterministic behavior)
PROBE_BASE_SEED=42

# Tick Interval (milliseconds between agent steps)
PROBE_TICK_INTERVAL_MS=1000

# Max HTTP Retries (with exponential backoff)
PROBE_MAX_RETRIES=3

# Verbose Logging (true/false)
PROBE_VERBOSE=false
